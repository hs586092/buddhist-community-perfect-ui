{
  "name": "buddhist-community",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "description": "Buddhist Community Platform - Connect, Learn, Practice Together",
  "keywords": [
    "buddhist",
    "community",
    "meditation",
    "spiritual",
    "dharma",
    "amplify"
  ],
  "homepage": "https://github.com/your-org/buddhist-community",
  "dependencies": {
    "@aws-amplify/api": "^6.3.16",
    "@aws-amplify/auth": "^6.14.0",
    "@aws-amplify/ui-react": "^6.11.2",
    "@hookform/resolvers": "^5.1.1",
    "@tanstack/react-query": "^5.83.0",
    "@tanstack/react-query-devtools": "^5.83.0",
    "@types/react-router-dom": "^5.3.3",
    "aws-amplify": "^6.15.4",
    "date-fns": "^4.1.0",
    "framer-motion": "^12.23.9",
    "immer": "^10.1.1",
    "lucide-react": "^0.525.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-hook-form": "^7.60.0",
    "react-router-dom": "^7.7.0",
    "zod": "^4.0.5",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.1",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/container-queries": "^0.1.1",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/postcss": "^4.1.11",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.9",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.16",
    "gh-pages": "^6.3.0",
    "globals": "^15.13.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.4.2",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.7.2",
    "vite": "^6.0.5",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.1.8"
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build-check": "tsc -b && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:install": "playwright install",
    "validate": "npm run type-check && npm run lint && npm run test run",
    "clean": "rm -rf dist node_modules/.vite",
    "clean:install": "npm run clean && npm install",
    "predeploy": "DEPLOY_TARGET=github-pages npm run build",
    "deploy": "gh-pages -d dist",
    "build:amplify": "npm run build",
    "deploy:check": "./scripts/check-prerequisites.sh",
    "deploy:init": "./scripts/amplify-init.sh",
    "deploy:setup": "./scripts/setup-backend-services.sh",
    "deploy:production": "./scripts/deploy-production.sh",
    "deploy:monitoring": "./scripts/setup-monitoring.sh",
    "deploy:full": "npm run deploy:check && npm run deploy:init && npm run deploy:setup && npm run deploy:production && npm run deploy:monitoring",
    "deploy:korea": "./scripts/deploy-korea-optimized.sh",
    "build:korea": "NODE_ENV=production VITE_TARGET_COUNTRY=KR vite build --mode production",
    "dev:korea": "VITE_TARGET_COUNTRY=KR vite dev",
    "preview:korea": "VITE_TARGET_COUNTRY=KR vite preview"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/buddhist-community.git"
  },
  "author": "Buddhist Community Team",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/buddhist-community/issues"
  }
}
